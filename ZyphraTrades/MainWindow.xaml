<Window x:Class="ZyphraTrades.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZyphraTrades" Height="640" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0B"
        Foreground="#EDEDED">

    <Window.Resources>
        <!-- Palette -->
        <Color x:Key="Bg0">#0A0A0B</Color>
        <Color x:Key="Bg1">#0E0E10</Color>
        <Color x:Key="Bg2">#141417</Color>
        <Color x:Key="Stroke">#26262B</Color>
        <Color x:Key="Muted">#A8A8B3</Color>
        <Color x:Key="Accent">#E11D48</Color>
        <!-- red -->
        <Color x:Key="Accent2">#FF3B30</Color>

        <SolidColorBrush x:Key="Bg0B" Color="{StaticResource Bg0}" />
        <SolidColorBrush x:Key="Bg1B" Color="{StaticResource Bg1}" />
        <SolidColorBrush x:Key="Bg2B" Color="{StaticResource Bg2}" />
        <SolidColorBrush x:Key="StrokeB" Color="{StaticResource Stroke}" />
        <SolidColorBrush x:Key="MutedB" Color="{StaticResource Muted}" />
        <SolidColorBrush x:Key="AccentB" Color="{StaticResource Accent}" />

        <!-- Base typography -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Bg2B}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Accent card (subtle red glow border) -->
        <Style x:Key="CardAccent" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="#3A0F18"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A0F18"/>
            <Setter Property="Background" Value="#1A0B0F"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#230C12"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentB}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#12070A"/>
                                <Setter Property="BorderBrush" Value="#FF5A5A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnGhost" TargetType="Button">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="Background" Value="{StaticResource Bg1B}"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#151519"/>
                                <Setter Property="BorderBrush" Value="#33333B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D0D10"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Inputs -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Bg1B}"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentB}"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource Bg1B}"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource Bg1B}"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Bg2B}"/>
            <Setter Property="Foreground" Value="#EDEDED"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource Bg2B}"/>
            <Setter Property="AlternatingRowBackground" Value="#121216"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="ColumnHeaderHeight" Value="44"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#0F0F12"/>
            <Setter Property="Foreground" Value="{StaticResource MutedB}"/>
            <Setter Property="BorderBrush" Value="{StaticResource StrokeB}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#17171C"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#201017"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource Bg1B}" BorderBrush="{StaticResource StrokeB}" BorderThickness="0,0,1,0">
            <DockPanel Margin="16">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="ZyphraTrades" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Journal · Analytics" Foreground="{StaticResource MutedB}" FontSize="11" Margin="0,3,0,0"/>
                    <Border Height="1" Background="{StaticResource StrokeB}" Margin="0,14,0,14"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Top">
                    <Button Style="{StaticResource BtnGhost}" Content="Dashboard" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource BtnGhost}" Content="Trades" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource BtnGhost}" Content="Emotional Journal" Margin="0,0,0,8" IsEnabled="False"/>
                    <Button Style="{StaticResource BtnGhost}" Content="Sessions" Margin="0,0,0,8" IsEnabled="False"/>
                    <Button Style="{StaticResource BtnGhost}" Content="Analytics" Margin="0,0,0,8" IsEnabled="False"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom">
                    <Border Height="1" Background="{StaticResource StrokeB}" Margin="0,14,0,14"/>
                    <TextBlock Text="Status" Foreground="{StaticResource MutedB}" FontSize="11"/>
                    <TextBlock Text="{Binding StatusText}" FontSize="12" Margin="0,6,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- MAIN -->
        <Grid Grid.Column="1" Background="{StaticResource Bg0B}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TOP BAR -->
            <Border Grid.Row="0" Background="{StaticResource Bg0B}" BorderBrush="{StaticResource StrokeB}" BorderThickness="0,0,0,1">
                <Grid Margin="18,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Trades" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Red/Black theme · Clean Architecture · SQLite local"
                                   Foreground="{StaticResource MutedB}" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource BtnGhost}"
                                Content="Export CSV" Margin="0,0,10,0"
                                Command="{Binding ExportCsvCommand}"/>
                        <Button Style="{StaticResource BtnGhost}"
                                Content="Delete" Margin="0,0,10,0"
                                Command="{Binding DeleteSelectedCommand}"/>
                        <Button Style="{StaticResource BtnPrimary}"
                                Content="↻ Refresh"
                                Command="{Binding RefreshCommand}"/>
                        <Button Style="{StaticResource BtnPrimary}"
                                Content="+ Add Dummy" Margin="10,0,0,0"
                                Command="{Binding AddDummyTradeCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- KPIs -->
            <Grid Grid.Row="1" Margin="18,16,18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource CardAccent}">
                    <StackPanel>
                        <TextBlock Text="Total trades" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding TotalTrades}" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Net PnL" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding NetPnlTotal, StringFormat={}{0:N2}}"
                                   FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Win rate" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding WinRateText}" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Avg R" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding AvgRText}" FontSize="26" FontWeight="Bold" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filters + Grid + Details -->
            <Grid Grid.Row="2" Margin="18,16,18,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- FILTER BAR -->
                <Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Card}" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SymbolFilter, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Symbol filter (e.g. AUDUSD)"
                                 />

                        <ComboBox Grid.Column="2"
                                  SelectedItem="{Binding SideFilter}"
                                  ItemsSource="{Binding SideFilterOptions}"
                                  />

                        <DatePicker Grid.Column="4"
                                    SelectedDate="{Binding FromDate}"/>

                        <DatePicker Grid.Column="6"
                                    SelectedDate="{Binding ToDate}"/>

                        <Button Grid.Column="8"
                                Style="{StaticResource BtnPrimary}"
                                Content="Apply"
                                Command="{Binding ApplyFilterCommand}"/>
                    </Grid>
                </Border>

                <!-- GRID -->
                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Card}" Padding="0">
                    <DataGrid ItemsSource="{Binding TradesView}"
                              SelectedItem="{Binding SelectedTrade}"
                              Margin="12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Opened (UTC)"
                                                Binding="{Binding OpenedAt, StringFormat=yyyy-MM-dd HH:mm}"
                                                Width="180"/>
                            <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="90"/>
                            <DataGridTextColumn Header="Side" Binding="{Binding Side}" Width="70"/>
                            <DataGridTextColumn Header="TF" Binding="{Binding Timeframe}" Width="70"/>
                            <DataGridTextColumn Header="Entry" Binding="{Binding EntryPrice}" Width="100"/>
                            <DataGridTextColumn Header="Exit" Binding="{Binding ExitPrice}" Width="100"/>
                            <DataGridTextColumn Header="Net" Binding="{Binding NetPnl}" Width="100"/>
                            <DataGridTextColumn Header="R" Binding="{Binding ResultR}" Width="70"/>
                            <DataGridTextColumn Header="Setup" Binding="{Binding Setup}" Width="120"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- DETAILS -->
                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Trade details" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="(read-only v1)" Foreground="{StaticResource MutedB}" FontSize="11" Margin="0,2,0,12"/>

                        <TextBlock Text="Symbol" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.Symbol}" FontSize="16" FontWeight="Bold" Margin="0,5,0,10"/>

                        <TextBlock Text="Opened (UTC)" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.OpenedAt, StringFormat=yyyy-MM-dd HH:mm}" Margin="0,5,0,10"/>

                        <TextBlock Text="Side · TF" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.Side}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedTrade.Timeframe}" Margin="0,2,0,10"/>

                        <TextBlock Text="Entry / Exit" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.EntryPrice}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding SelectedTrade.ExitPrice}" Margin="0,2,0,10"/>

                        <TextBlock Text="Net PnL" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.NetPnl, StringFormat={}{0:N2}}"
                                   FontSize="22" FontWeight="Bold" Margin="0,5,0,10"/>

                        <TextBlock Text="Notes" Foreground="{StaticResource MutedB}" FontSize="11"/>
                        <TextBlock Text="{Binding SelectedTrade.Notes}" TextWrapping="Wrap" Opacity="0.95" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
