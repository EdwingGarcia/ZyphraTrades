<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════
         ZYPHRATRADES · MODO OSCURO  (Slate-950 base)
         ═══════════════════════════════════════════════════════════════ -->

    <!-- Fondos -->
    <Color x:Key="ThemeBg0">#020617</Color>
    <!-- slate-950 -->
    <Color x:Key="ThemeBg1">#0F172A</Color>
    <!-- slate-900 -->
    <Color x:Key="ThemeBg2">#1E293B</Color>
    <!-- slate-800 -->
    <Color x:Key="ThemeBg3">#334155</Color>
    <!-- slate-700 -->
    <Color x:Key="ThemeStroke">#1E293B</Color>
    <Color x:Key="ThemeStrokeLight">#334155</Color>

    <!-- Texto -->
    <Color x:Key="ThemeFg">#F8FAFC</Color>
    <!-- slate-50 -->
    <Color x:Key="ThemeFgSecondary">#CBD5E1</Color>
    <!-- slate-300 -->
    <Color x:Key="ThemeMuted">#94A3B8</Color>
    <!-- slate-400 -->

    <!-- Acentos -->
    <Color x:Key="ThemeAccent">#E11D48</Color>
    <!-- rose-600 -->
    <Color x:Key="ThemeAccentHover">#F43F5E</Color>
    <!-- rose-500 -->

    <!-- Trade Ganador -->
    <Color x:Key="ThemeWinBorder">#10B981</Color>
    <!-- emerald-500 -->
    <Color x:Key="ThemeWinText">#34D399</Color>
    <!-- emerald-400 -->
    <Color x:Key="ThemeWinBg">#022C22</Color>
    <!-- emerald-950 -->

    <!-- Trade Perdedor -->
    <Color x:Key="ThemeLossBorder">#EF4444</Color>
    <!-- red-500 -->
    <Color x:Key="ThemeLossText">#F87171</Color>
    <!-- red-400 -->
    <Color x:Key="ThemeLossBg">#450A0A</Color>
    <!-- red-950 -->

    <!-- Categorías de Trade -->
    <Color x:Key="ThemeCatScalping">#3B82F6</Color>
    <!-- blue-500 -->
    <Color x:Key="ThemeCatSwing">#A855F7</Color>
    <!-- purple-500 -->
    <Color x:Key="ThemeCatIntraday">#EAB308</Color>
    <!-- yellow-500 -->
    <Color x:Key="ThemeCatPosition">#14B8A6</Color>
    <!-- teal-500 -->
    <Color x:Key="ThemeCatDefault">#6366F1</Color>
    <!-- indigo-500 -->

    <!-- Timeframe Cards -->
    <Color x:Key="ThemeTfCardBg">#0F172A</Color>
    <!-- slate-900 -->
    <Color x:Key="ThemeTfCardBorder">#1E293B</Color>

    <!-- Utilities -->
    <Color x:Key="ThemeCyan">#D4556B</Color>
    <!-- wine-rose -->
    <Color x:Key="ThemeAmber">#F59E0B</Color>
    <Color x:Key="ThemeWine">#9B3A4A</Color>
    <Color x:Key="ThemeWineLight">#D4556B</Color>
    <Color x:Key="ThemeWineDark">#6B2030</Color>

    <!-- ═══ Brushes ═══ -->
    <SolidColorBrush x:Key="ThemeBg0B"
                     Color="{StaticResource ThemeBg0}"/>
    <SolidColorBrush x:Key="ThemeBg1B"
                     Color="{StaticResource ThemeBg1}"/>
    <SolidColorBrush x:Key="ThemeBg2B"
                     Color="{StaticResource ThemeBg2}"/>
    <SolidColorBrush x:Key="ThemeBg3B"
                     Color="{StaticResource ThemeBg3}"/>
    <SolidColorBrush x:Key="ThemeStrokeB"
                     Color="{StaticResource ThemeStroke}"/>
    <SolidColorBrush x:Key="ThemeStrokeLightB"
                     Color="{StaticResource ThemeStrokeLight}"/>
    <SolidColorBrush x:Key="ThemeFgB"
                     Color="{StaticResource ThemeFg}"/>
    <SolidColorBrush x:Key="ThemeFgSecondaryB"
                     Color="{StaticResource ThemeFgSecondary}"/>
    <SolidColorBrush x:Key="ThemeMutedB"
                     Color="{StaticResource ThemeMuted}"/>
    <SolidColorBrush x:Key="ThemeAccentB"
                     Color="{StaticResource ThemeAccent}"/>
    <SolidColorBrush x:Key="ThemeAccentHoverB"
                     Color="{StaticResource ThemeAccentHover}"/>
    <SolidColorBrush x:Key="ThemeWinBorderB"
                     Color="{StaticResource ThemeWinBorder}"/>
    <SolidColorBrush x:Key="ThemeWinTextB"
                     Color="{StaticResource ThemeWinText}"/>
    <SolidColorBrush x:Key="ThemeWinBgB"
                     Color="{StaticResource ThemeWinBg}"/>
    <SolidColorBrush x:Key="ThemeLossBorderB"
                     Color="{StaticResource ThemeLossBorder}"/>
    <SolidColorBrush x:Key="ThemeLossTextB"
                     Color="{StaticResource ThemeLossText}"/>
    <SolidColorBrush x:Key="ThemeLossBgB"
                     Color="{StaticResource ThemeLossBg}"/>
    <SolidColorBrush x:Key="ThemeCatScalpingB"
                     Color="{StaticResource ThemeCatScalping}"/>
    <SolidColorBrush x:Key="ThemeCatSwingB"
                     Color="{StaticResource ThemeCatSwing}"/>
    <SolidColorBrush x:Key="ThemeCatIntradayB"
                     Color="{StaticResource ThemeCatIntraday}"/>
    <SolidColorBrush x:Key="ThemeCatPositionB"
                     Color="{StaticResource ThemeCatPosition}"/>
    <SolidColorBrush x:Key="ThemeCatDefaultB"
                     Color="{StaticResource ThemeCatDefault}"/>
    <SolidColorBrush x:Key="ThemeTfCardBgB"
                     Color="{StaticResource ThemeTfCardBg}"/>
    <SolidColorBrush x:Key="ThemeTfCardBorderB"
                     Color="{StaticResource ThemeTfCardBorder}"/>
    <SolidColorBrush x:Key="ThemeCyanB"
                     Color="{StaticResource ThemeCyan}"/>
    <SolidColorBrush x:Key="ThemeAmberB"
                     Color="{StaticResource ThemeAmber}"/>
    <SolidColorBrush x:Key="ThemeWineB"
                     Color="{StaticResource ThemeWine}"/>
    <SolidColorBrush x:Key="ThemeWineLightB"
                     Color="{StaticResource ThemeWineLight}"/>
    <SolidColorBrush x:Key="ThemeWineDarkB"
                     Color="{StaticResource ThemeWineDark}"/>

</ResourceDictionary>
